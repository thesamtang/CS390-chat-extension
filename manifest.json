{
  "name": "390 Chat",
  "version": "0.1",
  "manifest_version": 2,
  
  "description": "Live chat for CS390",
  "content_security_policy": "script-src 'self' https://code.jquery.com/* https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",


  "background": {
    "page": "background.html",
    "persistent": true
  },
  

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "390 chat",
    "default_popup": "390chat.html"
  }
}